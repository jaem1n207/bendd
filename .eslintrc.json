{
  "extends": ["next/core-web-vitals", "prettier"],
  "overrides": [
    // Configuration for testing
    {
      "files": ["**/*.test.ts", "**/*.test.tsx"],
      "plugins": ["@vitest", "testing-library"]
    },
    // Configuration for e2e testing (Playwright)
    {
      "files": ["**/*.spec.ts"],
      "extends": ["plugin:playwright/recommended"]
    }
  ]
}
